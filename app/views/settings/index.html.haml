%h1 Settings

%h2 Credential
= form_tag(:action => "update_credential") do
  %table
    %tr
      %td Username
      %td 
        = text_field_tag :username, Setting.value_for_key('username')
    %tr
      %td Password
      %td 
        = password_field_tag :password, Setting.value_for_key('password')
  = submit_tag 'Update'